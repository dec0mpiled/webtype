    <link href="/stylesheets/animate.css" rel="stylesheet" type="text/css">

    <link href="/webfont/webfont.css" rel="stylesheet" type="text/css">
    <link href='https://fonts.googleapis.com/css?family=Inconsolata:400,700' rel='stylesheet' type='text/css'>

    <link href='/stylesheets/drawer.min.css' rel='stylesheet' type='text/css'>

    <script src="/javascripts/jquery.min.js"></script>
    <script src="/javascripts/parsley.min.js"></script>

    <!-- drawer -->
