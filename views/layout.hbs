  <body class="drawer drawer--left">
    {{#if user}}
    <header role="banner">
      <button type="button" class="drawer-toggle drawer-hamburger">
        <span class="sr-only">toggle navigation</span>
        <span class="icon icon-menu"></span>
      </button>
      <nav class="drawer-nav" role="navigation">
        <ul class="drawer-menu">

          <li><a class="drawer-brand" href="/">owebbot</a></li>

          <a href="/c/d" class="drawer-menu-item">New Document</a>

          {{#if editor}}
          {{#if document.content.title}}
            <a class="drawer-menu-item" href="/@{{user.username}}/{{document.slug}}"><b>{{document.content.title}}</b></a>
          {{else}}
            <a class="drawer-menu-item" href="/~{{document.id}}"><b>{{document.id}}</b></a>
          {{/if}}

          {{#if document.draft}}
          <a class="drawer-menu-item" href="/e/d/{{document.id}}/s?publish=true">Publish</a>
          {{else}}
          <a class="drawer-menu-item" href="/e/d/{{document.id}}/s?publish=false">Unpublish</a>
          {{/if}}

          <a href="/e/d/{{document.id}}" class="drawer-menu-item">Edit</a>
          <a href="/d/d/{{document.id}}" class="drawer-menu-item">Remove</a>

          <li><b class="drawer-menu-item">Documents ({{documents.length}})</b></li>

          {{#each documents}}
          <li><a class="drawer-menu-item" href="/e/d/{{id}}">
            {{#if content.title}}{{truncate content.title}}{{else}}{{id}}{{/if}} <br>
            <span class="list-item-meta">edited {{formatRelative date.edited}}</span>
          </a></li>
          {{/each}}

          {{else}}
          <li><a class="drawer-menu-item" href="/people">People</a></li>
          <li><a class="drawer-menu-item" href="/tags">Tags</a></li>
          <li><a class="drawer-menu-item" href="/auth/logout">Logout</a></li>
          {{/if}}

          <li><b><a class="drawer-menu-item" href="/auth/update">Settings</a></b></li>
          <li><b><a class="drawer-menu-item" href="/auth/logout">Logout</a></b></li>
        </ul>
      </nav>
    </header>
    {{/if}}
    <main role="main">
      {{{body}}}
    </main>
  </body>

</html>
