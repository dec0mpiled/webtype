<div class="container">
  <!-- HEADER -->
  <header>
	<h1 class="global-logo"><a href="/">webtype</a>:admin</h1>
  </header>

  <h2>account</h2>

  <p>id: {{account.id}}</p>
  <p>url: <a href="/{{account.username}}">/{{account.username}}</a></p>
  <p>name: {{account.name}}</p>
  <p>email: {{account.email}}</p>
  <p>admin: {{#if account.admin}}true{{else}}false{{/if}}</p>

  <h2>Documents ({{documents.length}})</h2>
  
  <div class="list list-current">
    {{#each documents}}
    <div class="list-item" id="{{id}}">
        <h1 class="list-item-title">{{#if draft}}ðŸ”’{{else}}ðŸ”“{{/if}} {{content.title}}</h2>
        <span class="list-item-meta">{{formatRelative date.edited}}</span>
        <div class="list-item-actions">
          <a href="/admin/doc/{{id}}" class="list-item-meta">modify</a>
          <a href="/admin/doc/{{id}}/delete" class="list-item-meta">delete</a>
        </div>
    </div>
    {{/each}}
  </div>
  <hr>

  <a href="/admin/user/{{account.id}}/delete">delete</a>

</div>
