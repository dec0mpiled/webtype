<div class="container">
  {{#unless user}}

  <h1 class="global-logo"><a href="/">owebbot</a></h1>

  <!-- no user -->
  <br>
  <div class="jumbotron">

    <h1>Blazing fast editing and publishing</h1>

    <h2>Quick Markdown Editing.</h2>
    <p>With then barebones simplicity of markdown and our super easy-to-use editor, you can format and send privately or publicly using our easy-to-use blogging feature.</h2>

      <br><br>

    <a href="/auth/login" class="button">login</a>
    <a href="/auth/register" class="button">register</a>

  </div>
  {{else}}


<!-- HEADING -->

  <header>
    <div class="global-actions">
      <a class="global-action tooltip-bottom" href="/@{{user.username}}" data-tooltip="user {{user.username}} settings"><i class="icon icon-user"></i></a>
      <a class="global-action tooltip-bottom" href="/auth/logout" data-tooltip="log user {{user.username}} out"><i class="icon icon-lock"></i></a>
    </div>

    <h1 class="global-logo"><a href="/">owebbot</a></h1>
  </header>

<!-- DOCUMENT -->

  <div class="list-header">
    <div class="list-header-actions">
      <a class="list-header-action" href="/c/d" data-tooltip="cmd+d or ctrl+d"><span class="icon icon-plus"></span></a>
    </div>
    <h2 class="list-header-title">Documents ({{document.length}})</h2>
  </div>

  <div class="list-body">
    {{#each document}}
    <div class="list-item">

      <header class="list-item-header">
        <div class="list-item-actions">
          <a href="#export-{{id}}" class="list-item-action list-item-action-add"><span class="icon icon-export"></span></a>
          <a href="/e/d/{{id}}" class="list-item-action list-item-action-edit"><span class="icon icon-document-edit"></span></a>
          <a href="/d/d/{{id}}" class="list-item-action list-item-action-delete"><span class="icon icon-trash"></span></a>
        </div>

        <h3>
          {{#if private}}
          <span class="list-item-header">{{#if content.title}}{{content.title}}{{else}}{{id}}{{/if}}</span>
          {{else}}
            {{#if content.title}}
              <a href="/@{{../user.username}}/{{slug}}" class="list-item-header">{{content.title}}</a>
            {{else}}
              <a href="/~{{id}}" class="list-item-header">{{id}}</a>
            {{/if}}
          {{/if}}
          <br>
          <span class="list-item-meta">{{date date.edited}}</span>
        </h3>
      </header>

    </div>

    <section id="export-{{id}}" class="modal--show modal-hide" id="modal-text" tabindex="-1"
        role="dialog" aria-labelledby="modal-label" aria-hidden="true">

        <div class="modal-inner">
            <header id="modal-label">
              <h2>Document Preferences</h2>
            </header>
            <div class="modal-content">

              <h3>Privacy Settings</h3>
              {{#if private}}
              <p>Doc is <b>Private</b>. <a href="/e/d/{{id}}/s?private=false">Make public.</a></p>
              {{else}}
              <p>Doc is <b>Public</b>. <a href="/e/d/{{id}}/s?private=true">Make private.</a></p>
              {{/if}}
            </div>
        </div>

        <a href="#!" class="modal-close" title="Close this modal" data-close="Close"
            data-dismiss="modal">?</a>
    </section>

    {{else}}

    <div class="list-item">

      <a href="/c/d">Create a document</a>

    </div>

    {{/each}}

  </div>

  {{/unless}}
</div>

<!-- SCRIPTS -->
<script type="text/javascript" src="/javascripts/modal.js"></script>
<link href="/stylesheets/animate.css" rel="stylesheet" type="text/css">
<link href="/stylesheets/modal.css" rel="stylesheet" type="text/css">

<script>

    $(document).keydown(function(event) {
      if ((event.ctrlKey || event.metaKey) && event.which == 68) {
        console.log('event');
        window.location = '/c/d';
        event.preventDefault();
        return false;
      }
    });

</script>
