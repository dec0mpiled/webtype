<div class="container">
  <h1><a href="/">owebbot</a></h1>
  
  <h1 class="title">{{result.username}}</h1>
  <h2>{{result.name}}</h2>
  {{#equal user.id result.id}}
  <h3>Update Account Data</h3>
  <form action="/auth/update" method="post">
    <div class="form-group">
      <label for="email">Email</label>
      <input name="email" placeholder="Email" id="email" type="email" value="{{result.email}}">
    </div>
    <div class="form-group">
      <label for="name">Name</label>
      <input name="name" placeholder="Name" id="name" type="text" value="{{result.name}}">
    </div>
    <div class="form-group">
      <label for="username">Username</label>
      <input name="username" placeholder="username" id="username" type="text" value="{{result.username}}">
    </div>
    <br>
    <button type="submit">Submit</button>
  </form>
  {{/equal}}
</div>